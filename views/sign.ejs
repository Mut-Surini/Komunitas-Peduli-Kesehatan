<div class="container">
    <div class="content">
        <h1>KOMUNITAS PEDULI KESEHATAN</h1>
        <img src="image/cover-min.jpg" alt="">
    </div>
    <div class="form">
        <form method="post">
            <div class="image">
                <img src="image/medical-team.png" alt="">
            </div>
            <div class="input-email">
                <input class="icon" type="email" name="email" placeholder="&#xf0e0;  Email" required>
                <% if(typeof errors != 'undefined'){ %> 
                    <% if(typeof errors.find(element => element.param == 'email') != 'undefined'){ %> 
                        <div class="error" style="margin-top: 10px;">
                            <p><%= errors.find(element => element.param == 'email').msg %></p>
                        </div>
                    <% } %> 
                <% } %> 
            </div>
            <div class="input-password">
                <input class="icon" type="password" name="password" placeholder="&#xf023;  Password" required>
                <% if(typeof errors != 'undefined'){ %> 
                    <% if(typeof errors.find(element => element.param == 'password') != 'undefined'){ %> 
                        <div class="error" style="margin-top: 10px;">
                            <p><%= errors.find(element => element.param == 'password').msg %></p>
                        </div>
                    <% } %> 
                <% } %> 
            </div>
            <div class="submit">
                <button class="icon" type="submit" name="Sign in">Sign In</button>
            </div>
            <div class="text">
                <p>Don't have an account? <a href="/register">Create account</a></p>
            </div>
        </form>
    </div>
</div>